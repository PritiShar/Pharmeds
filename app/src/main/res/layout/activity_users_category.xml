<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/card4"
            android:layout_margin="15dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/image1"
                android:src="@drawable/personalcare"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Care"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image1"
                android:layout_marginLeft="10dp"
                />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:layout_toEndOf="@id/image1"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/title"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/card1"
            android:layout_margin="15dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/image2"
                android:src="@drawable/petscare"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pets Care"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image2"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on Pets Products"
                android:textColor="#a9a9a9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image2"
                android:layout_below="@id/title2"
                android:layout_margin="10dp"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/card2"
            android:layout_margin="15dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/image3"
                android:src="@drawable/accucheck"/>

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/image3"
                android:text="Healthcare Products"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on diabetes Products"
                android:textColor="#a9a9a9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image3"
                android:layout_below="@id/title3"
                android:layout_margin="10dp"

                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/card3"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/pads" />

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mother and Baby Care Products"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image4"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/description4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on Womens Products"
                android:textColor="#a9a9a9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image4"
                android:layout_below="@id/title4"
                android:layout_margin="10dp"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/card5"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/mask" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covid Essentials"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image5"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/description5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on surgical Products"
                android:textColor="#a9a9a9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image5"
                android:layout_below="@id/title5"
                android:layout_margin="10dp"

                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/card7"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/image6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/himalaya" />

            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayurvedic Products"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image6"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/description6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on surgical Products"
                android:textColor="#a9a9a9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image6"
                android:layout_below="@id/title6"
                android:layout_margin="10dp"

                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/card8"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/image8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/horlicks" />

            <TextView
                android:id="@+id/title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Food and Drinks"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image8"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/description8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on surgical Products"
                android:textColor="#a9a9a9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/image8"
                android:layout_below="@id/title8"
                android:layout_margin="10dp"

                />


        </RelativeLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>