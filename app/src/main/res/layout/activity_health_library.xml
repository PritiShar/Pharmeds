<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    tools:context=".healthLibrary"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/healthlibrarycardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/healthlibrary1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/vegetables"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/healthlibrarycardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/text1health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diet to include during diabetes"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>